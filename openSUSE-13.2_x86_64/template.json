{
  "provisioners": [
    {
	  "environment_vars": [],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh '{{.Path}}'",
      "type": "shell",
      "scripts": [
        "scripts/sshd.sh",
        "scripts/vagrant.sh",
        "scripts/vmtools.sh",
        "scripts/sudoers.sh",
        "scripts/zypper-locks.sh",
        "scripts/cleanup.sh",
        "scripts/minimize.sh"
      ]
    }
  ],
  "variables": 
	{
      "mirror": "http://download.opensuse.org/distribution",
      "name": "openSUSE-13.2-x86_64",
      "version": "0.1.4"
	},
	  
  "builders": [
    {
	  "vm_name": "{{user `name`}}",
      "type": "virtualbox-iso",
      "boot_command": [
        "<esc><enter><wait>",
        "linux net.ifnames=0 netdevice=eth0 netsetup=dhcp<wait>",
        " install={{user `mirror`}}/13.2/repo/oss/ insecure=1<wait>",
        " lang=en_US autoyast=http://{{ .HTTPIP }}:{{ .HTTPPort }}/autoinst.xml<wait>",
        " textmode=1<wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 20480,
      "guest_os_type": "OpenSUSE_64",
      "http_directory": "http",
      "iso_checksum": "f2f0ecc6b1939d3725f22221baed237f",
      "iso_checksum_type": "md5",
      "iso_url": "{{user `mirror`}}/13.2/iso/openSUSE-13.2-NET-x86_64.iso",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "1024"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ]
      ]
    },
	{
	  "vm_name": "{{user `name`}}",
      "vmdk_name": "{{user `name`}}-disk0",
      "type": "vmware-iso",
      "boot_command": [
        "<esc><enter><wait>",
        "linux net.ifnames=0 netdevice=eth0 netsetup=dhcp<wait>",
        " install={{user `mirror`}}/13.2/repo/oss/ insecure=1<wait>",
        " lang=en_US autoyast=http://{{ .HTTPIP }}:{{ .HTTPPort }}/autoinst.xml<wait>",
        " textmode=1<wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 20480,
      "guest_os_type": "opensuse-64",
      "http_directory": "http",
      "iso_checksum": "f2f0ecc6b1939d3725f22221baed237f",
      "iso_checksum_type": "md5",
      "iso_url": "{{user `mirror`}}/13.2/iso/openSUSE-13.2-NET-x86_64.iso",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
      "tools_upload_flavor": "linux",
      "vmx_data": {
        "memsize": "1024",
        "numvcpus": "2",
        "cpuid.coresPerSocket": "1"
      }
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "vagrant_{{user `name`}}-{{ .Provider }}-{{user `version`}}.box"
    },
	{
     "type": "vagrant-vmware-ovf",
     "compression_level": 9,
     "output": "vmware-ovf_{{user `name`}}-{{.Provider}}-{{user `version`}}.box",
	 "only": ["vmware-iso"]
   }
  ]
}
